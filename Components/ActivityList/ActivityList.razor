@page "/activity-list"
@using Un2TrekApp.Domain
@using Un2TrekApp.Activities

@if (activities is not null && activities.Any())
{
    <div class="secondary-title mb-4 m-2" style="color:black; font-family:'Chelsea Market'">
        Selecciona una actividad
    </div>
    @foreach (var item in activities)
    {
        <div class="m-2">
        <ActivityComponent ActivityToShow="item" />
        </div>
    }
}

@code {
    [Inject]
    IActivitiesService ActivityService { get; set; }
    
    private List<Activity> activities;


    override protected async Task OnInitializedAsync()
    {
        activities = await ActivityService.GetActiveActivityListAsync();
    }

}